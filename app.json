{
  "expo": {
    "name": "news-reader",
    "slug": "news-reader",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "20250804_1804_Sleek News Microphone Icon_simple_compose_01k1vw4bhrfxqszq6456xrk1c4.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mehlliott.newsreader",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to capture your voice commands so it can transcribe them into text and deliver the news you request. For example, if you say 'Politics from BBC,' the app will recognize your speech and fetch relevant BBC political news articles for you.",
        "NSPhotoLibraryUsageDescription": "This app may request access to the photo library due to third-party libraries. No photos are collected or stored.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert spoken words into text in order to process them into the code.",
        "ITSAppUsesNonExemptEncryption": false
      } 
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "20250804_1804_Sleek News Microphone Icon_simple_compose_01k1vw4bhrfxqszq6456xrk1c4.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.anonymous.newsreader"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "62e095b7-6dc1-4c77-bb78-6fabfe47f964"
      }
    },
    "owner": "mehlliott"
  }
}
